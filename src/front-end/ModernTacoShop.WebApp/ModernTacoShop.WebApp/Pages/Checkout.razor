@page "/checkout/{OrderId}"
<div class="promo"></div>
<div class="container">

    <MealsList CartModel="cartModel" />

    <div class="row col">

        <div class="container-fluid">
            <h4>Delivery</h4>

            <form method="post" action="#">
                <div class="form-group">
                    <div class="form-group">
                        <label for="inputfullname4">Full Name</label>
                        <input type="text" disabled class="form-control" id="inputfullname4" placeholder="Full Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" disabled class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
                <div class="form-group">
                    <label for="inputAddress2">Address 2</label>
                    <input type="text" disabled class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCity">City</label>
                        <input type="text" disabled class="form-control" id="inputCity">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">State</label>
                        <select id="inputState" disabled class="form-control">
                            <option selected>Choose...</option>
                            @if (States != null && States.Any())
                            {
                                @foreach (var item in States)
                                {
                                    <option value="@item.Abbreviation">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputZip">Zip</label>
                        <input type="text" disabled class="form-control" id="inputZip">
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="row col">
        <div class="container-fluid">
            <h4>Payment</h4>
            <p>
                * This is a Demo simulating payment, all fields are disabled, please click on Pay to continue the Demo
            </p>
            <div style="margin:20px auto 100px auto; position:relative">
                <button type="button" class="btn btn-primary" @onclick="SubmitOrderAsync">One-Click Payment</button>
            </div>
        </div>

    </div>
</div>
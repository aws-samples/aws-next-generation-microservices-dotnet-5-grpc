<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TableLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="10"
		android:stretchColumns="0"
		android:id="@+id/tableLayout1">
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/domainNameLabelRow">
			<TextView
				android:text="@string/order__label_domain_name"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" />
		</TableRow>
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/domainNameRow">
			<EditText
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/domainNameText"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:inputType="text"
				android:layout_span="4"
				android:maxLines="1" />
		</TableRow>
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/beefTacoRow">
			<TextView
				android:text="@string/order__label_beef_tacos"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" />
			<TextView
				android:id="@+id/beefTacoCountLabel"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="10px"/>
			<Button
				android:text="@string/order__label_button_plus"
				android:id="@+id/addBeefTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:onClick=""
				android:layout_marginHorizontal="10px" />
			<Button
				android:text="@string/order__label_button_minus"
				android:id="@+id/subtractBeefTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:enabled="false"
				android:layout_marginHorizontal="10px" />
		</TableRow>
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/carnitasTacoRow">
			<TextView
				android:text="@string/order__label_carnitas_tacos"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" />
			<TextView
				android:id="@+id/carnitasTacoCountLabel"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="10px"/>
			<Button
				android:text="@string/order__label_button_plus"
				android:id="@+id/addCarnitasTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:onClick=""
				android:layout_marginHorizontal="10px" />
			<Button
				android:text="@string/order__label_button_minus"
				android:id="@+id/subtractCarnitasTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:enabled="false"
				android:layout_marginHorizontal="10px" />
		</TableRow>
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/chickenTacoRow">
			<TextView
				android:text="@string/order__label_chicken_tacos"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" />
			<TextView
				android:id="@+id/chickenTacoCountLabel"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="10px"/>
			<Button
				android:text="@string/order__label_button_plus"
				android:id="@+id/addChickenTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:onClick=""
				android:layout_marginHorizontal="10px" />
			<Button
				android:text="@string/order__label_button_minus"
				android:id="@+id/subtractChickenTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:enabled="false"
				android:layout_marginHorizontal="10px" />
		</TableRow>
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/shrimpTacoRow">
			<TextView
				android:text="@string/order__label_shrimp_tacos"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" />
			<TextView
				android:id="@+id/shrimpTacoCountLabel"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="10px"/>
			<Button
				android:text="@string/order__label_button_plus"
				android:id="@+id/addShrimpTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:onClick=""
				android:layout_marginHorizontal="10px" />
			<Button
				android:text="@string/order__label_button_minus"
				android:id="@+id/subtractShrimpTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:enabled="false"
				android:layout_marginHorizontal="10px" />
		</TableRow>
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/tofuTacoRow">
			<TextView
				android:text="@string/order__label_tofu_tacos"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" />
			<TextView
				android:id="@+id/tofuTacoCountLabel"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="10px"/>
			<Button
				android:text="@string/order__label_button_plus"
				android:id="@+id/addTofuTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:onClick=""
				android:layout_marginHorizontal="10px" />
			<Button
				android:text="@string/order__label_button_minus"
				android:id="@+id/subtractTofuTacoButton"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:enabled="false"
				android:layout_marginHorizontal="10px" />
		</TableRow>
	</TableLayout>
	<Button
		android:text="@string/order__label_submit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:enabled="false"
		android:id="@+id/submitOrderButton" />

</LinearLayout>
